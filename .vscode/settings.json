{
   "breadcrumbs.enabled": true,

   "editor.mouseWheelZoom": true,
   "editor.insertSpaces": true,
   "editor.tabSize": 3,
   "editor.detectIndentation": false,
   "editor.formatOnPaste": false,
   "editor.formatOnSave": true,
   "editor.formatOnType": false,
   "editor.rulers": [120],
   "editor.quickSuggestions": {
      "strings": true
   },
   "editor.codeActionsOnSave": {
      "source.organizeImports": false
   },
   "editor.minimap.renderCharacters": false,
   "editor.snippetSuggestions": "top",
   "editor.accessibilitySupport": "off",
   "editor.fontFamily": "Hack",

   "emmet.triggerExpansionOnTab": true,
   "emmet.showSuggestionsAsSnippets": true,
   "emmet.includeLanguages": {},

   "explorer.confirmDragAndDrop": false,

   "diffEditor.ignoreTrimWhitespace": false,

   "files.autoSave": "onWindowChange",
   "files.eol": "\n",

   "git.enableSmartCommit": true,
   "git.confirmSync": false,
   "git.autofetch": true,

   "npm.enableScriptExplorer": true,

   "window.zoomLevel": 1,

   "workbench.iconTheme": "material-icon-theme",
   "workbench.colorTheme": "Monokai",

   // Languages
   "javascript.preferences.quoteStyle": "single",

   "typescript.updateImportsOnFileMove.enabled": "always",
   "typescript.tsdk": "node_modules/typescript/lib",

   "css.validate": false,
   "less.validate": false,
   "scss.validate": false,

   "html.format.wrapLineLength": 120,
   "html.format.wrapAttributes": "auto",
   "html.format.endWithNewline": true,

   // Extensions settings
   "auto-rename-tag.activationOnLanguage": ["html", "xml"],
   "auto-close-tag.activationOnLanguage": ["html", "xml"],

   "cucumberautocomplete.steps": ["e2e/steps/*.steps.ts"],
   "cucumberautocomplete.syncfeatures": "e2e/features/*.feature",
   "cucumberautocomplete.strictGherkinCompletion": true,

   "htmlhint.options": {
      "doctype-first": false
   },

   "prettier.disableLanguages": ["html"],
   "prettier.jsxBracketSameLine": true,

   "testExplorer.codeLens": true,
   "testExplorer.errorDecoration": true,
   "testExplorer.gutterDecoration": true,

   "tslint.autoFixOnSave": true,
   "tslint.rulesDirectory": "./node_modules/codelyzer",

   "material-icon-theme.showUpdateMessage": false,

   "cSpell.ignorePaths": [
      "node_modules", // this will ignore anything the node_modules directory
      "**/node_modules", // the same for this one
      "**/node_modules/**", // the same for this one
      "node_modules/**", // Doesn't currently work due to how the current working directory is determined.
      "vscode-extension", //
      ".git", // Ignore the .git directory
      "*.dll", // Ignore all .dll files.
      "**/*.dll", // Ignore all .dll files
      "package.json"
   ]
}
