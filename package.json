{
  "name": "portfolio",
  "version": "0.0.6",
  "engines": {
    "node": "^8.10.0",
    "npm": ">=5.0.0",
    "yarn": ">=1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samuelfernandez/portfolio"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "xo && ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "server": "node server.js",
    "heroku-postbuild": "npm run build",
    "ci:test": "ng test --watch=false --browsers ChromeNoSandbox",
    "ci:e2e": "ng e2e --protractor-config=e2e/protractor-ci.conf.js --prod",
    "ci:e2e-remote": "ng e2e --protractor-config=e2e/protractor-ci.conf.js --dev-server-target= --base-url=$URL",
    "ci:audit-pagespeed": "gulp pagespeed --url=$URL --threshold=$PAGESPEED_THRESHOLD",
    "ci:audit-lighthouse": "gulp lighthouse --url=$URL --threshold=$LIGHTHOUSE_THRESHOLD --runs 3"
  },
  "main": "server.js",
  "dependencies": {
    "@angular/animations": "^6.0.7",
    "@angular/common": "^6.0.7",
    "@angular/compiler": "^6.0.7",
    "@angular/core": "^6.0.7",
    "@angular/forms": "^6.0.7",
    "@angular/http": "^6.0.7",
    "@angular/platform-browser": "^6.0.7",
    "@angular/platform-browser-dynamic": "^6.0.7",
    "@angular/router": "^6.0.7",
    "core-js": "^2.5.4",
    "express": "^4.16.3",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.7",
    "@angular/language-service": "^6.0.7",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~10.5.1",
    "bluebird": "^3.5.1",
    "chalk": "^2.4.1",
    "chrome-launcher": "^0.10.2",
    "codelyzer": "~4.4.2",
    "gulp": "^4.0.0",
    "jasmine": "^3.1.0",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^1.1.0",
    "lighthouse": "^3.0.0",
    "octonode": "^0.9.2",
    "protractor": "~5.3.0",
    "psi": "^3.1.0",
    "require-dir": "^1.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.10.0",
    "typescript": "~2.7.2",
    "xo": "^0.21.1",
    "yargs": "^12.0.1"
  },
  "greenkeeper": {
    "ignore": [
      "@angular/animations",
      "@angular/common",
      "@angular/compiler",
      "@angular/core",
      "@angular/forms",
      "@angular/http",
      "@angular/platform-browser",
      "@angular/platform-browser-dynamic",
      "@angular/router",
      "rxjs",
      "zone.js",
      "@angular/compiler-cli",
      "@angular-devkit/build-angular",
      "typescript",
      "@angular/cli",
      "@angular/language-service",
      "@types/jasmine",
      "@types/jasminewd2",
      "@types/node",
      "jasmine-core",
      "jasmine-spec-reporter",
      "karma",
      "karma-chrome-launcher",
      "karma-coverage-istanbul-reporter",
      "karma-jasmine",
      "karma-jasmine-html-reporter",
      "protractor",
      "ts-node",
      "tslint"
    ]
  },
  "xo": {
    "envs": ["node", "browser", "jasmine"],
    "space": 3,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "off",
      "no-use-extend-native/no-use-extend-native": "off",
      "max-nested-callbacks": ["warn", {"max": 5}],
      "no-negated-condition": "off"
    }
  },
  "prettier": {
     "singleQuote": true,
     "bracketSpacing": true
  }
}
