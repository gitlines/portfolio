{
   "compilerOptions": {
      "baseUrl": "./",
      "sourceMap": false,
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2018", "dom", "esnext"],
      "paths": {
         "@lib/*": ["lib/*"]
      }
   },
   "include": ["server/**/*.ts"],
   "exclude": ["node_modules"]
}
